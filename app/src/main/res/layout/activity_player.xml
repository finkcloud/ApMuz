<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/music_list"
        android:layout_above="@id/player_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />


    <LinearLayout
        android:id="@+id/player_box"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvsongName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Toast Koffe - Best Compilation album 2019 ..."
            android:textSize="18sp"/>

        <SeekBar
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:id="@+id/nextprevContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/prev"
                />
            <ImageView
                android:id="@+id/PlayBtn"
                android:layout_weight="1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/play_button"
                android:onClick="onPlaySongClicked"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/fast_forward"/>


            <ImageView
                android:id="@+id/StopBtn"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/stop"
                android:onClick="onStopSongClicked"/>
        </LinearLayout>
    </LinearLayout>













</RelativeLayout>